<%- include("partials/head", {webTitle: 'User Information'})%>
<%- include("partials/header")%>


<div class="container py-5">
    <p class="lead text-center">User Information</p>

<div class="row">
    <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4 text-center mt-2">
            <img src="/avatar.png" class="img-fluid rounded-circle " alt="..." width="100" height="auto">
          </div>
          <div class="col-md-8 text-center">
            <div class="card-body">
              <h5 class="card-title"><%= user.firstname %> <%= user.lastname %></h5>
              <p class="card-text"><strong>Email: </strong><%= user.email %></p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
        </div>
      </div>

</div>
<div class="row">
    <div class="col-md-12  p-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Day</th>
                    <th>start at</th>
                    <th>end at</th>
                </tr>
            </thead>
            <tbody>
                <% if (userSchedules.length > 0) { %>
                    <% userSchedules.forEach(element => { %>
                        <tr>
                            <% const dayNumber = element.day %> 
                <% const weekDays = {1: 'Monday',2: 'Tuesday', 3: 'Wednesday', 4: 'Thursday', 5: 'Friday', 6: 'Saturday', 7: 'Sunday'} %>
                <% const showDay = weekDays[dayNumber] %>
                            
                            <td><%= showDay %></td>
                            <td><%= element.start_time %> </td>
                            <td><%= element.end_time %> </td>
                        </tr>
                    <% }) %>    
                <% } %>    
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-12  text-center">
        <a href="/home" class="btn btn-secondary">Back</a>
    </div>
</div>
</div>


<%- include("partials/footer")%>